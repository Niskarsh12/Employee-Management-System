// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Employee {
  id        String @id @default(cuid()) @map("_id")
  firstname String
  lastname  String
  email     String @unique
  salary    Int
}
